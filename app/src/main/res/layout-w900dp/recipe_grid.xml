<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.huyvuong.udacity.bakingapp.ui.activity.RecipeListActivity">

    <!-- This layout is a grid layout for recipes. -->

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recipe_grid"
        android:name="com.huyvuong.udacity.bakingapp.RecipePickerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="GridLayoutManager"
        app:spanCount="3"
        tools:context="com.huyvuong.udacity.bakingapp.ui.activity.RecipePickerActivity"
        tools:listitem="@layout/recipe_list_content" />

</LinearLayout>
